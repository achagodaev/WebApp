@using WebApp.UI.Controllers

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WebApp", 
                    nameof(HomeController.Index), 
                    nameof(HomeController).Replace("Controller", ""), 
                    new { area = "" }, 
                    new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Администрирование <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Заказчики",
                                    nameof(CustomersController.Index),
                                    nameof(CustomersController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Грузополучатели",
                                    nameof(AddressesController.Index),
                                    nameof(AddressesController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Поставщики",
                                    nameof(SuppliersController.Index),
                                    nameof(SuppliersController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Продукция",
                                    nameof(ProductsController.Index),
                                    nameof(ProductsController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Материалы",
                                    nameof(MaterialsController.Index),
                                    nameof(MaterialsController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Размеры",
                                    nameof(SizesController.Index),
                                    nameof(SizesController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Заказы",
                                    nameof(OrdersController.Index),
                                    nameof(OrdersController).Replace("Controller", ""))
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Отчеты <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Продукция",
                                    nameof(ProductsReportController.Index),
                                    nameof(ProductsReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Грузополучатели",
                                    nameof(AddressesReportController.Index),
                                    nameof(AddressesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Материалы",
                                    nameof(MaterialsReportController.Index),
                                    nameof(MaterialsReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Поставки материалов",
                                    nameof(MaterialDeliveriesReportController.Index),
                                    nameof(MaterialDeliveriesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Приемки материалов",
                                    nameof(MaterialAcceptancesReportController.Index),
                                    nameof(MaterialAcceptancesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Поставки готовой продукции",
                                    nameof(ProductDeliveriesReportController.Index),
                                    nameof(ProductDeliveriesReportController).Replace("Controller", ""))
                            </li>

                            <li role="separator" class="divider"></li>

                            <li>
                                @Html.ActionLink("Продукция заказа",
                                    nameof(OrderProductAddressesReportController.Index),
                                    nameof(OrderProductAddressesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Размерные данные продукции заказа",
                                    nameof(OrderProductAddressSizesReportController.Index),
                                    nameof(OrderProductAddressSizesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Материалы продукции заказа",
                                    nameof(OrderProductMaterialsReportController.Index),
                                    nameof(OrderProductMaterialsReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Поставки материалов продукции заказа",
                                    nameof(OrderProductDeliveryMaterialsReportController.Index),
                                    nameof(OrderProductDeliveryMaterialsReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Производство продукции заказа",
                                    nameof(OrderProductAddressProductionDateSizesReportController.Index),
                                    nameof(OrderProductAddressProductionDateSizesReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Материалы производства продукции заказа",
                                    nameof(ProductionMaterialsReportController.Index),
                                    nameof(ProductionMaterialsReportController).Replace("Controller", ""))
                            </li>
                            <li>
                                @Html.ActionLink("Поставки готовой продукции заказа",
                                    nameof(OrderProductAddressDeliverySizesReportController.Index),
                                    nameof(OrderProductAddressDeliverySizesReportController).Replace("Controller", ""))
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text navbar-right">@DateTime.Now.ToShortDateString()</p>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
