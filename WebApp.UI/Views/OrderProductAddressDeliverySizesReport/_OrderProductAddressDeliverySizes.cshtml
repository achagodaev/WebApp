                                                                                    <th>
                                                                                        @sizes.Sum(size => size.Sum(s => s.Quantity))
                                                                                    </th>
                                                                                    <th>
                                                                                        @deliveredSizes.Sum(size => size.Sum(s => s.DeliveryQuantity))
