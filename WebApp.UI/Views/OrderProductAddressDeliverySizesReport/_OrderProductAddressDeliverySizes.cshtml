                @if (Model.SelectedGroupBy == "product")
                {
                    <div class="form-group">
                        @Html.Label("Продукция", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @if (Model.OrderProducts.Any())
                            {
                                var orderProductIndex = 0;

                                foreach (var orderProduct in Model.OrderProducts)
                                {
                                    orderProductIndex++;

                                    var orderProductQuantity = orderProduct.OrderProductAddresses
                                        .SelectMany(opa => opa.OrderProductAddressSizes)
                                        .Sum(s => s.Quantity);

                                    <table class="table table-condensed table-bordered">
                                        <tr class="active">
                                            <th>
                                                @orderProductIndex. @Html.DisplayFor(modelItem => orderProduct.Product.Name)
                                            </th>
                                        </tr>
                                        <tr class="active">
                                            <th>
                                                Количество: @orderProductQuantity
                                            </th>
                                        </tr>
                                    </table>

                                    <div class="form-group">
                                        @Html.Label("Грузополучатели", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">

                                            @{
                                                int orderProductAddressIndex = 0;

                                                if (orderProduct.OrderProductAddresses.Any())
                                                {
                                                    foreach (var orderProductAddress in orderProduct.OrderProductAddresses)
                                                    {
                                                        orderProductAddressIndex++;

                                                        <table class="table table-condensed table-bordered">
                                                            <tr class="active">
                                                                <th>
                                                                    @orderProductAddressIndex. @Html.DisplayFor(modelItem => orderProductAddress.Address.Name)
                                                                </th>
                                                            </tr>
                                                            <tr class="active">
                                                                <th>
                                                                    Дата поставки: @Html.DisplayFor(modelItem => orderProductAddress.DeliveryDate)
                                                                </th>
                                                            </tr>
                                                        </table>

                                                        <div class="form-group">
                                                            @Html.Label("Размерные данные поставленной продукции", htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10">

                                                                @{
                                                                    var sizes = orderProductAddress.OrderProductAddressSizes
                                                                        .GroupBy(opas => opas.SizeId);

                                                                    var deliveredSizes = orderProductAddress.OrderProductAddressDeliveries
                                                                        .SelectMany(opad => opad.OrderProductAddressDeliverySizes)
                                                                        .GroupBy(opads => opads.SizeId);

                                                                    var results = sizes.GroupJoin(deliveredSizes,
                                                                        size => size.Key,
                                                                        deliveredSize => deliveredSize.Key,
                                                                        (size, deliveredSize) => new
                                                                        {
                                                                            SizeId = size.Key,
                                                                            Quantity = size.Sum(s => s.Quantity),
                                                                            DeliveryQuantity = deliveredSize.SingleOrDefault(s => s.Key == size.Key) != null
                                                                                ? deliveredSize.Single(s => s.Key == size.Key).Sum(s => s.DeliveryQuantity)
                                                                                : 0,
                                                                            AcceptanceQuantity = deliveredSize.SingleOrDefault(s => s.Key == size.Key) != null
                                                                                ? deliveredSize.Single(s => s.Key == size.Key).Sum(s => s.AcceptanceQuantity)
                                                                                : 0,
                                                                            Difference = deliveredSize.SingleOrDefault(s => s.Key == size.Key) != null
                                                                                ? deliveredSize.Single(s => s.Key == size.Key).Sum(s => s.AcceptanceQuantity) - size.Sum(s => s.Quantity)
                                                                                : 0 - size.Sum(s => s.Quantity)
                                                                        });

                                                                    var totalDifference = deliveredSizes.Sum(size => size.Sum(s => s.AcceptanceQuantity)) - sizes.Sum(size => size.Sum(s => s.Quantity));

                                                                    <table class="table table-condensed table-bordered">
                                                                        <tr class="active">
                                                                            <th rowspan="2">Размер</th>
                                                                            <th colspan="3">Количество</th>
                                                                            <th rowspan="2">+/-</th>
                                                                        </tr>
                                                                        <tr class="active">
                                                                            <th>Заказ</th>
                                                                            <th>Поставка</th>
                                                                            <th>Приемка</th>
                                                                        </tr>

                                                                        @if (results.Any())
                                                                        {
                                                                            foreach (var result in results)
                                                                            {
                                                                                <tr>
                                                                                    <td>
                                                                                        @Model.Sizes[result.SizeId]
                                                                                    </td>
                                                                                    <td>
                                                                                        @result.Quantity
                                                                                    </td>
                                                                                    <td>
                                                                                        @result.DeliveryQuantity
                                                                                    </td>
                                                                                    <td>
                                                                                        @result.AcceptanceQuantity
                                                                                    </td>

                                                                                    @if (result.Difference != 0)
                                                                                    {
                                                                                        <td>
                                                                                            <strong class="text-danger">
                                                                                                @result.Difference
                                                                                            </strong>
                                                                                        </td>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <td>
                                                                                            @result.Difference
                                                                                        </td>
                                                                                    }
                                                                                </tr>
                                                                            }

                                                                            <tr class="active">
                                                                                <th>
                                                                                    Всего: @sizes.Count()
                                                                                </th>
                                                                                <th>
                                                                                    @sizes.Sum(size => size.Sum(s => s.Quantity))
                                                                                </th>
                                                                                <th>
                                                                                    @deliveredSizes.Sum(size => size.Sum(s => s.DeliveryQuantity))
                                                                                </th>
                                                                                <th>
                                                                                    @deliveredSizes.Sum(size => size.Sum(s => s.AcceptanceQuantity))
                                                                                </th>

                                                                                @if (totalDifference != 0)
                                                                                {
                                                                                    <th>
                                                                                        <strong class="text-danger">
                                                                                            @totalDifference
                                                                                        </strong>
                                                                                    </th>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <th>
                                                                                        @totalDifference
                                                                                    </th>
                                                                                }
                                                                            </tr>
                                                                        }
                                                                        else
                                                                        {
                                                                            <tr class="active">
                                                                                <td colspan="5">Нет размерных данных</td>
                                                                            </tr>
                                                                        }

                                                                    </table>
                                                                }

                                                            </div>
                                                        </div>


                                                    }
                                                }
                                                else
